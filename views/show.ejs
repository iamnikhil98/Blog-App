<%include ./partials/header%>

<div class="ui main text container segment">
    <div class="ui huge header"><h1><%=blog.title%></h1></div>
    
    
      <div class="ui top attached segment">
        <div class="item">
            
          <img class="ui centered rounded image" src="<%=blog.image%>">  
            <div class="content">
                <span><%=blog.created.toDateString()%></span>
            </div>
     
        </div>
        <div class="description">
            <p><%=blog.body%></p>
        </div>
        
      </div>
      <a class="ui green inverted button" href="/blogs">Back to Home Page</a>
      
      <a class="ui blue inverted button" href="/blogs/<%= blog._id%>/edit">Edit Blog</a>
      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
      <button class="ui pink inverted button">DELETE</button>
      </form>
</div>









<%include ./partials/footer %>